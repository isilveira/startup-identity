@model StartupIdentity.Presentations.WebAPP.Models.Account.AccountSignUpViewModel
@{
    Layout = "_SignLayout";
    ViewData["Title"] = "SignUp";
}

<div class="row">
    <div class="col-12">
        <h1>Account/SignIn</h1>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <h4>Sign up</h4>

        @using (Html.BeginForm(FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <form>
                <div class="form-group">
                    @Html.LabelFor(x => x.Credential, "Credential")
                    @Html.TextBoxFor(x => x.Credential, new { @class = "form-control", @type = "email", @aria_describedby = "emailHelp", @placeholder = "Enter your credential" })
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password, "Password")
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Enter your password" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ConfirmPassword, "Confirm password")
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm your password" })
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        }
    </div>
</div>