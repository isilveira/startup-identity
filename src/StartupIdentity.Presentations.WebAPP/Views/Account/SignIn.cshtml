@model StartupIdentity.Presentations.WebAPP.Models.Account.AccountSignInViewModel
@{
    Layout = "_SignLayout";
    ViewData["Title"] = "SignIn";
}

<div class="row">
    <div class="col-12">
        <h1>Account/SignIn</h1>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <h4>Sign in</h4>

        @using (Html.BeginForm(FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(x=>x.ReturnUrl)

            <form>
                <div class="form-group">
                    @Html.LabelFor(x=>x.Credential, "Credential")
                    @Html.TextBoxFor(x=>x.Credential, new { @class="form-control", @type="email", @aria_describedby="emailHelp", @placeholder="Enter your credential" })
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x=>x.Password, "Password")
                    @Html.PasswordFor(x=>x.Password, new { @class="form-control", @placeholder="Enter your password" })
                </div>
                <div class="form-group form-check">
                    @Html.CheckBoxFor(x=>x.RememberMe, new { @class="form-check-input" })
                    @Html.LabelFor(x=>x.RememberMe, "Check me out", new { @class="form-check-label" })
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        }
    </div>
    <div class="col-6">
        <h4>External</h4>
        <p>...</p>
    </div>
</div>
